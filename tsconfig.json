{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "lib",
    "rootDir": "src",
    "composite": true,
    "incremental": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@collectible/*": ["collectible/*"],
      "@account/*": ["account/*"],
      "@btc/*": ["btc/*"],
      "@brc20/*": ["brc20/*"],
      "@rune/*": ["rune/*"],
      "@signer/*": ["signer/*"],
      "@utxo/*": ["utxo/*"],
      "@alkanes/*": ["alkanes/*"],
      "@oyl-sdk/*": ["packages/*/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.wasm", "packages/runes/src/index.test.ts", "packages/runes/src/index.ts", "packages/runes/src/rune.ts", "packages/rpc-client/src/alkanes.ts", "packages/rpc-client/src/esplora.ts", "packages/rpc-client/src/interfaces.ts", "packages/rpc-client/src/metashrew.ts", "packages/rpc-client/src/ord.ts", "packages/rpc-client/src/provider.ts", "packages/rpc-client/src/sandshrew.ts"],
  "exclude": ["node_modules", "lib", "**/*.test.ts", "src/__fixtures__"],
  "ts-node": {
    "esm": true
  }
}
